{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // 결과물 출력 디렉터리
    "rootDir": "./api"  // 소스 파일의 루트 디렉터리
  },
  "include": ["api/**/*.ts"] // 컴파일할 TypeScript 파일 경로
}
